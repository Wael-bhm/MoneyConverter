<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="408dp"
        android:layout_height="76dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="1dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="267dp"
            android:layout_height="76dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:paddingLeft="40dp"
            android:paddingTop="15dp"
            android:text="TP1-P1"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="10dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/arrow_down_float" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="409dp"
        android:layout_height="652dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="346dp"
            android:layout_height="104dp"
            android:layout_gravity="center"
            android:paddingVertical="20dp"
            android:paddingLeft="30dp"
            android:text="Money Converter"
            android:textColor="#1B1818"
            android:textSize="34sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:inputType="text"
            android:outlineSpotShadowColor="#CA0909" />

        <RadioButton
            android:id="@+id/ED"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="30dp"
            android:text=" EURO -> Dinar" />

        <RadioButton
            android:id="@+id/DE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dinar -> Euro" />

        <Button
            android:id="@+id/b_convert"
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="20dp"
            android:text="Button" />

        <TextView
            android:id="@+id/res"
            android:layout_width="372dp"
            android:layout_height="145dp"
            android:layout_gravity="center"
            android:layout_marginVertical="60dp"
            android:text="The result will be displayed here"
            android:textSize="24sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>